---
interface Props {
  title: string;
  id: string;
  bgColor?: string;
}

const { title, id, bgColor = "bg-white" } = Astro.props;
---

<section id={id} class={`${bgColor} py-16`}>
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-devbulb-blue mb-8">{title}</h2>
    <slot />
  </div>
</section>